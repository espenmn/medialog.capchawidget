<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:z3c="http://namespaces.zope.org/z3c"
	i18n_domain="medialog.capchawidget">
	

  <class class=".widget.CapchaWidget">
    <require
        permission="zope.Public"
        interface="medialog.capchawidget.widgets.widget.ICapchaWidget"
        />
  </class>

  <!--  Display widget  -->
  <z3c:widgetTemplate
      mode="display"
      widget="medialog.capchawidget.widgets.widget.ICapchaWidget"
      layer="z3c.form.interfaces.IFormLayer"
      template="capcha_display.pt" />

  <!--  Input (edit) widget  -->
  <z3c:widgetTemplate
      mode="input"
      widget="medialog.capchawidget.widgets.widget.ICapchaWidget"
      layer="z3c.form.interfaces.IFormLayer"
      template="capcha_input.pt" />
      
      
      
</configure>



